<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.cloudcargo.attachments.sdk">

    <application>
        <activity
                android:name="org.cloudcargo.attachments.sdk.ui.InstallCloudCargoActivity"
                android:exported="true"
                android:label="@string/cloudcargo_install_app"
                android:enabled="true"
                android:theme="@style/Theme.AppCompat.Light.Dialog">
            <intent-filter android:priority="-1000">
                <action android:name="org.cloudcargo.action.UPLOAD_ATTACHMENT"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
